{% extends '@Juno/layout.html.twig' %}

{% block tab 'Workers' %}

{% block body %}
    <section id="workers">
        <header>
            <h2>Workers</h2>
        </header>

        <div class="row-fluid">
            <div class="span12">
                <p>The list below contains all registered workers and their status.</p>

                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <th>Where</th>
                        <th>Queue</th>
                        <th>Processing</th>
                    </thead>

                    <tbody>
                    {% for worker in workers %}
                    {% else %}
                        <tr>
                            <td colspan="3">Nothing is happening right now...</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </section>
{% endblock %}
